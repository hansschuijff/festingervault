{
  "exclude": ["node_modules"],
  "include": ["src/**/*","scripts/**/*"],
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "target": "ES2020",
    "module": "ESNext",
    "types": ["vite/client"],
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
